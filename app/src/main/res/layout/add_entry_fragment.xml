<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddEntryFragment">

    <ImageButton
        android:id="@+id/from_camera"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="68dp"
        android:scaleType="fitStart"
        android:src="@android:drawable/ic_menu_camera"
        android:tint="#009688"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/from_gallery"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/from_gallery"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="fitStart"
        android:src="@android:drawable/ic_menu_gallery"
        android:tint="#009688"
        app:layout_constraintBottom_toBottomOf="@+id/from_camera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/from_camera"
        app:layout_constraintTop_toTopOf="@+id/from_camera" />

    <ImageView
        android:id="@+id/captured_image"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_marginTop="48dp"
        android:src="@android:color/background_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>